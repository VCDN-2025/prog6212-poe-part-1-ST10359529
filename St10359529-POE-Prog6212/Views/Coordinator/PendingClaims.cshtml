@model IEnumerable<St10359529_POE_Prog6212.Models.Claim>
@{
    ViewData["Title"] = "Pending Claims";
}

<h2 class="mb-4 text-primary">Pending Claims</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No pending claims at the moment.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>ID</th>
                <th>Lecturer</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Total</th>
                <th>Submitted</th>
                <th>Notes / Warnings</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.Id</td>
                    <td>@claim.Name @claim.Surname</td>
                    <td>@claim.HoursWorked</td>
                    <td>R @claim.HourlyRate</td>
                    <td class="text-success fw-bold">R @claim.TotalAmount.ToString("F2")</td>
                    <td>@claim.SubmissionDate.ToString("dd MMM yyyy")</td>
                    <td>
                        @if (!string.IsNullOrEmpty(claim.Notes) && claim.Notes.Contains("HIGH RISK"))
                        {
                            <span class="badge bg-danger">@claim.Notes</span>
                        }
                        else
                        {
                            <span class="text-muted">@claim.Notes</span>
                        }
                    </td>
                    <td>
                        <form asp-action="ApproveClaim" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@claim.Id" />
                            <button type="submit" class="btn btn-success btn-sm">Approve</button>
                        </form>
                        <form asp-action="RejectClaim" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@claim.Id" />
                            <button type="submit" class="btn btn-warning btn-sm">Reject</button>
                        </form>
                        <form asp-action="DeleteClaim" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@claim.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}