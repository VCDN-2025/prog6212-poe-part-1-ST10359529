@model IEnumerable<St10359529_POE_Prog6212.Models.Claim>
<h2 class="mb-4">Pending Claims</h2>
@if (!Model.Any())
{
    <p class="text-info">No pending claims yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Contact Number</th>
                <th>Hours</th>
                <th>Total</th>
                <th>Status</th>
                <th>Submission Date</th>
                
                <th>Actions</th> <!-- New column for buttons -->
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.Id</td>
                    <td>@claim.Name</td>
                    <td>@claim.Surname</td>
                    <td>@claim.ContactNumber</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.TotalAmount</td>
                    <td><span class="badge bg-warning">@claim.Status</span></td>
                    <td>@claim.SubmissionDate.ToShortDateString()</td>
                   
                    <td>
                        <form asp-action="ApproveClaim" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@claim.Id" />
                            <button type="submit" class="btn btn-success btn-sm">Approve</button>
                        </form>
                        <form asp-action="RejectClaim" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@claim.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                        </form>
                        <form asp-action="DeleteClaim" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@claim.Id" />
                            <button type="submit" class="btn btn-secondary btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<a href="@Url.Action("Logout", "Coordinator")" class="btn btn-danger mt-3">Logout</a>