@{
    ViewData["Title"] = "Contract Monthly Claim System";
}
<style>
    .home-background {
        background: url('https://images.unsplash.com/photo-1503676260728-1c00da094a0b?ixlib=rb-4.0.3&auto=format&fit=crop&w=1350&q=80') no-repeat center center;
        background-size: cover;
        min-height: 100vh;
        position: relative;
        overflow: hidden;
    }

        .home-background.no-image {
            background: linear-gradient(135deg, #007bff, #0056b3);
        }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 123, 255, 0.8);
        z-index: 1;
    }

    .content {
        position: relative;
        z-index: 2;
        color: white;
        text-align: center;
        padding: 80px 20px;
    }

    .welcome-text {
        font-size: 3.5rem;
        font-weight: 700;
        text-shadow: 2px 2px 8px rgba(0,0,0,0.5);
        animation: fadeIn 2s ease-in-out;
    }

    .lead {
        font-size: 1.4rem;
        max-width: 800px;
        margin: 0 auto 40px;
    }

    .role-card {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-radius: 20px;
        padding: 30px;
        transition: all 0.4s ease;
        height: 100%;
    }

        .role-card:hover {
            transform: translateY(-15px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.3);
            background: rgba(255, 255, 255, 0.25);
        }

    .role-icon {
        font-size: 4rem;
        margin-bottom: 20px;
    }

    .btn-custom {
        padding: 12px 30px;
        font-size: 1.1rem;
        border-radius: 50px;
        margin-top: 15px;
    }

    /* FIXED KEYFRAMES — ONLY ONE @@ NEEDED IN RAZOR */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 768px) {
        .welcome-text {
            font-size: 2.5rem;
        }

        .role-card {
            margin-bottom: 20px;
        }
    }
</style>

<div class="home-background">
    <div class="overlay"></div>
    <div class="content">
        <h1 class="welcome-text mb-4">Contract Monthly Claim System</h1>
        <p class="lead mb-5">Secure • Efficient • Automated Claim Processing</p>
        <p class="mb-5 fw-bold">Please select your role to continue</p>

        <div class="container">
            <div class="row g-5 justify-content-center">

                <!-- LECTURER (No Login Required) -->
                <div class="col-md-4">
                    <div class="role-card text-center">
                        <div class="role-icon">Lecturer</div>
                        <h3 class="text-white">Lecturer</h3>
                        <p class="text-white-50">Submit monthly claims<br>Track your claim status</p>
                        <a asp-controller="Lecturer" asp-action="SubmitClaim"
                           class="btn btn-success btn-lg btn-custom">
                            Enter as Lecturer
                        </a>
                    </div>
                </div>

                <!-- PROGRAMME MANAGER (Login Required) -->
                <div class="col-md-4">
                    <div class="role-card text-center">
                        <div class="role-icon">Manager</div>
                        <h3 class="text-white">Programme Manager</h3>
                        <p class="text-white-50">Review pending claims<br>Approve • Reject • Delete</p>
                        <a asp-controller="Manager" asp-action="Login"
                           class="btn btn-warning btn-lg btn-custom text-dark">
                            Manager Login Required
                        </a>
                    </div>
                </div>

                <!-- HR DEPARTMENT (Login Required) -->
                <div class="col-md-4">
                    <div class="role-card text-center">
                        <div class="role-icon">HR</div>
                        <h3 class="text-white">HR Department</h3>
                        <p class="text-white-50">View all submitted claims<br>Read-only access</p>
                        <a asp-controller="HR" asp-action="Login"
                           class="btn btn-info btn-lg btn-custom">
                            HR Login Required
                        </a>
                    </div>
                </div>

            </div>
        </div>

        <div class="mt-5 text-white-50">
            <p>Nehaaar Goosai • ST10359529 • PROG6212 POE Part 3 • @DateTime.Now.Year</p>
        </div>
    </div>
</div>

<script>
    // Fallback if background image fails to load
    document.addEventListener('DOMContentLoaded', function () {
        const bgDiv = document.querySelector('.home-background');
        const img = new Image();
        img.src = bgDiv.style.backgroundImage.slice(5, -2);
        img.onerror = () => bgDiv.classList.add('no-image');
    });
</script>