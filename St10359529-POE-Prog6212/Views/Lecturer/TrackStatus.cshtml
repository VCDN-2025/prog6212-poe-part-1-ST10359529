@model IEnumerable<St10359529_POE_Prog6212.Models.Claim>
<h2 class="mb-4">Claim Status Tracker</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Hours</th>
            <th>Total</th>
            <th>Status</th>
            <th>Submission Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.Id</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.TotalAmount</td>
                <td><span class="badge @(claim.Status == "Pending" ? "bg-warning" : claim.Status == "Approved" ? "bg-success" : "bg-danger")">@claim.Status</span></td>
                <td>@claim.SubmissionDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>