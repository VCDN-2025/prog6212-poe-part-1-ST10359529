@model IEnumerable<St10359529_POE_Prog6212.Models.Claim>

<h2 class="mb-4 text-primary">Pending Claims - Manager Review</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">No pending claims at the moment.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>ID</th>
                <th>Lecturer</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Total</th>
                <th>Risk Flags</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Id</td>
                    <td>@c.Name @c.Surname</td>
                    <td>@c.HoursWorked</td>
                    <td>R @c.HourlyRate</td>
                    <td>R @c.TotalAmount.ToString("F2")</td>
                    <td class="text-danger fw-bold">@c.Notes</td>
                    <td>
                        <form asp-action="ApproveClaim" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@c.Id" />
                            <button type="submit" class="btn btn-success btn-sm">Approve</button>
                        </form>
                        <form asp-action="RejectClaim" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@c.Id" />
                            <button type="submit" class="btn btn-warning btn-sm">Reject</button>
                        </form>
                        <form asp-action="DeleteClaim" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@c.Id" />
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Delete permanently?')">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}