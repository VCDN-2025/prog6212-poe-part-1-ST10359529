<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contract Monthly Claim System (CMCS)</title>
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Local CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/St10359529_POE_Prog6212.styles.css" asp-append-version="true" />
    <style>
        .navbar {
            background-color: #007bff;
        }

        .navbar-brand, .nav-link {
            color: white !important;
        }

        .dropdown-menu {
            background-color: #007bff;
        }

        .dropdown-item {
            color: white !important;
        }

            .dropdown-item:hover {
                background-color: #0056b3;
                color: white !important;
            }

        .nav-link.hr-link {
            font-weight: 600;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CMCS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Lecturer" asp-action="SubmitClaim">Submit Claim</a></li>

                        <!-- Track Status Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="trackStatusDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Track Status
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="trackStatusDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Coordinator" asp-action="ApprovedClaims">Approved Claims</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Coordinator" asp-action="RejectedClaims">Rejected Claims</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Coordinator" asp-action="DeletedClaims">Deleted Claims</a></li>
                            </ul>
                        </li>

                        <!-- Coordinator (Manager) Access -->
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Coordinator" asp-action="PendingClaims">Pending Claims</a>
                        </li>

                        <!-- HR Process Link - Part 3 Requirement -->
                        <li class="nav-item">
                            <a class="nav-link hr-link text-warning" asp-area="" asp-controller="HR" asp-action="ProcessClaims">
                                HR Process
                            </a>
                        </li>

                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4 py-3">
        <div class="container text-center">
            &copy; 2025 - Contract Monthly Claim System (CMCS) -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> |
            Nehaaar Goosai - ST10359529
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>